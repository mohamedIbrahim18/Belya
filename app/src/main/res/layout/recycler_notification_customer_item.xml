<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#EAEAEA"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp"
    android:padding="15dp"
    app:cardElevation="10dp"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_accepted"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_accepted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/status_notification_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="@string/accepted_from_tech_1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/image_accepted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:textColor="@color/blue_main"
            />
        <TextView
            android:id="@+id/time_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/status_notification_text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="17:25:PM"
            android:textStyle="italic"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>