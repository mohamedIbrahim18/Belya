        android:supportsRtl="true"
        android:theme="@style/Theme.Belya"
        tools:targetApi="31">
        <activity
            android:name=".ui.registration.customerinfo.CustomerInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.auth.forget_password.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer_main.CustomerMainActivity"
            android:exported="true" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".ui.technician_main.TechnicianMainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.technicianinfo.TechnicianInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.auth.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.auth.signup.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>